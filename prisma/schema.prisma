datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  phone    String
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  imageUrl    String?
  description String?
  brandId     Int
  modelId     Int
  brand       Brand   @relation(fields: [brandId], references: [id])
  model       Model   @relation(fields: [modelId], references: [id])
}

model Model {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Brand {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}
